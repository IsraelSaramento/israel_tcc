{%
  set classes = [
  'grid-container',
  'layout',
  'layout--col-two-two-one',
]
%}
{%
  set col_classes = [
  'cell',
  'medium-12',
  'large-6',
  'layout__region',
]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.top %}
      <div {{ region_attributes.top.addClass('layout__region', 'layout__region--top') }}>
        {{ content.top }}
      </div>
    {% endif %}

    <div class='grid-x grid-margin-half layout__region'>
      {% if content.first %}
        <div {{ region_attributes.first.addClass(col_classes, 'layout__region--first') }}>
          {{ content.first }}
        </div>
      {% endif %}

      {% if content.second %}
        <div {{ region_attributes.second.addClass(col_classes, 'layout__region--second') }}>
          {{ content.second }}
        </div>
      {% endif %}

      {% if content.third %}
        <div {{ region_attributes.third.addClass(col_classes, 'layout__region--third') }}>
          {{ content.third }}
        </div>
      {% endif %}

      {% if content.fourth %}
        <div {{ region_attributes.fourth.addClass(col_classes, 'layout__region--fourth') }}>
          {{ content.fourth }}
        </div>
      {% endif %}

      {% if content.fifth %}
        <div {{ region_attributes.fifth.addClass(col_classes, 'layout__region--fifth') }}>
          {{ content.fifth }}
        </div>
      {% endif %}
    </div>

    {% if content.bottom %}
      <div {{ region_attributes.bottom.addClass('layout__region', 'layout__region--bottom') }}>
        {{ content.bottom }}
      </div>
    {% endif %}
  </div>
{% endif %}
