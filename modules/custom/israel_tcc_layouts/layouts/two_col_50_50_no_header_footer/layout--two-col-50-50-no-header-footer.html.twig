{%
  set classes = [
  'grid-container',
  'layout',
  'layout--two-col-no-header-footer',
]
%}
{%
  set col_classes = [
    'cell',
    'medium-12',
    'large-6',
    'layout__region',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>

    <div class='grid-x grid-margin-half layout__region'>
      {% if content.first %}
        <div {{ region_attributes.first.addClass(col_classes, 'layout__region--first') }}>
          {{ content.first }}
        </div>
      {% endif %}

      {% if content.second %}
        <div {{ region_attributes.second.addClass(col_classes, 'layout__region--second') }}>
          {{ content.second }}
        </div>
      {% endif %}
    </div>

  </div>
{% endif %}
