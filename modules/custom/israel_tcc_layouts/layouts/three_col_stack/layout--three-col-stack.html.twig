{%
  set classes = [
  'grid-container',
  'layout',
  'layout--threecol-stack',
]
%}
{%
  set col_classes = [
  'cell',
  'medium-6',
  'large-4',
  'layout__region',
]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.top %}
      <div {{ region_attributes.top.addClass('layout__region', 'layout__region--top') }}>
        {{ content.top }}
      </div>
    {% endif %}

    <div class='grid-x grid-margin-half layout__region'>
      {% if content.first %}
        <div {{ region_attributes.first.addClass(col_classes, 'layout__region--first') }}>
          {{ content.first }}
        </div>
      {% endif %}

      {% if content.second %}
        <div {{ region_attributes.second.addClass(col_classes, 'layout__region--second') }}>
          {{ content.second }}
        </div>
      {% endif %}

      {% if content.third %}
        <div {{ region_attributes.third.addClass(col_classes, 'layout__region--third') }}>
          {{ content.third }}
        </div>
      {% endif %}

      {% if content.fourth %}
        <div {{ region_attributes.fourth.addClass(col_classes, 'layout__region--fourth') }}>
          {{ content.fourth }}
        </div>
      {% endif %}

      {% if content.fifth %}
        <div {{ region_attributes.fifth.addClass(col_classes, 'layout__region--fifth') }}>
          {{ content.fifth }}
        </div>
      {% endif %}

      {% if content.sixth %}
        <div {{ region_attributes.sixth.addClass(col_classes, 'layout__region--sixth') }}>
          {{ content.sixth }}
        </div>
      {% endif %}

      {% if content.seventh %}
        <div {{ region_attributes.seventh.addClass(col_classes, 'layout__region--seventh') }}>
          {{ content.seventh }}
        </div>
      {% endif %}

      {% if content.eighth %}
        <div {{ region_attributes.eighth.addClass(col_classes, 'layout__region--eighth') }}>
          {{ content.eighth }}
        </div>
      {% endif %}

      {% if content.nine %}
        <div {{ region_attributes.nine.addClass(col_classes, 'layout__region--nine') }}>
          {{ content.nine }}
        </div>
      {% endif %}

      {% if content.ten %}
        <div {{ region_attributes.ten.addClass(col_classes, 'layout__region--ten') }}>
          {{ content.ten }}
        </div>
      {% endif %}

      {% if content.eleven %}
        <div {{ region_attributes.eleven.addClass(col_classes, 'layout__region--eleven') }}>
          {{ content.eleven }}
        </div>
      {% endif %}

      {% if content.twelve %}
        <div {{ region_attributes.twelve.addClass(col_classes, 'layout__region--twelve') }}>
          {{ content.twelve }}
        </div>
      {% endif %}
    </div>

    {% if content.bottom %}
      <div {{ region_attributes.bottom.addClass('layout__region', 'layout__region--bottom') }}>
        {{ content.bottom }}
      </div>
    {% endif %}
  </div>
{% endif %}
